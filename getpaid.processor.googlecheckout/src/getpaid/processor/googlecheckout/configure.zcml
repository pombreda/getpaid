<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser">

   <adapter
      for="Products.CMFCore.interfaces.ISiteRoot"
      provides=".interfaces.IGoogleCheckoutOptions"
      factory=".GoogleCheckoutOptions" />

   <!-- Working around a bug in the ca (z2.9) whereby we can't pickup 
        all the provided by an interface if we register for * -->
   <adapter
      for="Products.CMFCore.interfaces.ISiteRoot"
      provides="getpaid.core.interfaces.IPaymentProcessor"
      name="Google Checkout"
      factory=".GoogleCheckoutProcessor" />

   <browser:page
      for=".interfaces.IGoogleCheckoutProcessor"
      name="checkout_link"
      class=".browser.GoogleCheckoutLink"
      permission="zope2.View"
      />
     
</configure>
