<object name="portal_actions" meta_type="Plone Actions Tool">
    <action-provider name="portal_actions">
      <action title="Make this a Discountable Product" 
                action_id="make_discountable" 
                category="object_buttons" 
                condition_expr="python:path('object/@@discount_content_control').isPossibleDiscountable()" 
                url_expr="string:$object_url/@@activate-discountable" 
                visible="True">
            <permission>Modify portal content</permission>
        </action>
    </action-provider>
    <action-provider name="portal_actions">
      <action title="Make this Not a Discountable Product" 
                action_id="make_not_discountable" 
                category="object_buttons" 
                condition_expr="python:path('object/@@discount_content_control').isDiscountable()" 
                url_expr="string:$object_url/@@deactivate-discountable" 
                visible="True">
            <permission>Modify portal content</permission>
        </action>
    </action-provider>
    
    <action-provider name="portal_actions">
      <action title="Make this a Buy X Get X Free Product" 
                action_id="make_buyxgetxfreeable" 
                category="object_buttons" 
                condition_expr="python:path('object/@@discount_content_control').isPossibleBuyXGetXfreeable()" 
                url_expr="string:$object_url/@@activate-buyxgetxfreeable" 
                visible="True">
            <permission>Modify portal content</permission>
        </action>
    </action-provider>
    
    <action-provider name="portal_actions">
      <action title="Make this Not a Buy X Get X Free Product" 
                action_id="make_not_buyxgetxfreeable" 
                category="object_buttons" 
                condition_expr="python:path('object/@@discount_content_control').isBuyXGetXfreeable()" 
                url_expr="string:$object_url/@@deactivate-buyxgetxfreeable" 
                visible="True">
            <permission>Modify portal content</permission>
        </action>
    </action-provider>
    
    <object name="object" meta_type="CMF Action Category">
      <property name="title"></property>
      <object name="discountable" meta_type="CMF Action">
        <property name="title">Discountable</property>
        <property name="description"></property>
        <property
            name="url_expr">string:${object_url}/@@edit-discount</property>
        <property name="icon_expr"></property>
        <property
            name="available_expr">object/@@discountable-content|nothing</property>
        <property name="permissions">
          <element value="Modify portal content"/>
        </property>
        <property name="visible">True</property>
      </object>
    </object>
    
    <object name="object" meta_type="CMF Action Category">
      <property name="title"></property>
      <object name="buyxgetxfreeable" meta_type="CMF Action">
        <property name="title">Discountable</property>
        <property name="description"></property>
        <property
            name="url_expr">string:${object_url}/@@edit-buyxgetxfree</property>
        <property name="icon_expr"></property>
        <property
            name="available_expr">object/@@buyxgetxfreeable-content|nothing</property>
        <property name="permissions">
          <element value="Modify portal content"/>
        </property>
        <property name="visible">True</property>
      </object>
    </object>
</object>